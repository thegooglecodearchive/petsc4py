# -*- makefile -*-
.PHONY: all clean

include makefile.conf

F2PY = f2py --fcompiler=gnu95
#F2PY_FLAGS = --quiet
F2PY_FLAGS +=-DF2PY_REPORT_ON_ARRAY_COPY=1
F2PY_FLAGS +=--noarch --f90flags='${ARCHFLAGS}'

MODULE=matfreelib

all: ${MODULE}.so

${MODULE}.so: ${MODULE}.f90
	${F2PY} ${F2PY_FLAGS} -c $< -m ${MODULE}

clean:
	${RM} ${MODULE}.so
